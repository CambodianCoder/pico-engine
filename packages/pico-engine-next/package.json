{
  "private": true,
  "scripts": {
    "prepublish": "npm run build",
    "build": "rm -rf dist && tsc",
    "start": "npm run dev -s",
    "dev": "scriptsp -r dev:tsc dev:api",
    "dev:tsc": "tsc -w --preserveWatchOutput",
    "dev:api": "nodemon dist/cli.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "home-dir": "^1.0.0",
    "leveldown": "^4.0.2",
    "pico-framework": "0.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/helmet": "0.0.43",
    "@types/levelup": "^3.1.0",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.11.5",
    "nodemon": "^1.18.10",
    "scriptsp": "^1.1.1",
    "typescript": "^3.3.4000"
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "delay": "500",
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  }
}
